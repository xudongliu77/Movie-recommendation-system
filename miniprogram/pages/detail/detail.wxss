.detail-container {
  height: 400rpx;
  filter: blur(40rpx);
  opacity: 0.4;
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 400rpx;
  background-color: #333;
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 94.94%;
  height: 400rpx;
  padding: 20rpx;
}

.detail-img {
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}

.detail {
  flex-grow: 1;
  line-height: 50rpx;
  height: 90%;
}

.detail view {
  color: white;
  font-size: 24rpx;
}

.detail .detail-nm {
  font-size: 40rpx;
  font-weight: 700;
}

.detail-rating {
  display: flex;
  padding-right: 160rpx;
  align-items: baseline;
}

.detail.sc {
  color: #fc0;
  font-size: 36rpx;
  font-weight: 700;
}

.detail-genres {
  display: flex;
}

/***************  简介  ***************/

.intro {
  padding: 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.intro-text {
  text-align: justify;
  color: #555;
  font-size: 30rpx;
  line-height: 50rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  position: relative;
  z-index: -1;
}

.intro-text.hide {
  -webkit-line-clamp: 5;
}

.intro-text.show {
  -webkit-line-clamp: 0;
}

.intro-state {
  color: #1296db;
  font-size: 30rpx;
  line-height: 50rpx;
  float: right;
  margin-top: -40rpx;
  padding-left: 10rpx;
  z-index: 1;
  background-color: #F6F6F6;
}

/***************  主演  ***************/

.body {
  padding-left: 20rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.head-title {
  font-size: 30rpx;
  line-height: 50rpx;
  padding-top: 10rpx;
}

.actors {
  display: flex;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.actors-card {
  width: 180rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.actors-card image {
  height: 250rpx;
  width: 100%;
  border-radius: 5px;
}

.actors-nm {
  color: #555;
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

/***************  评价  ***************/
.comment-container {
  padding: 0 20rpx;
}

.van-rate {
  padding: 12rpx;
}

.comment-img {
  width: 210rpx;
  height: 210rpx;
  margin: 20rpx 20rpx 0 0;
}

.van-button {
  display: flex;
  justify-content: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.van-btn {
  padding-bottom: 20rpx;
}

